{
  "name": "@sigma-force/react-sigma-cli",
  "version": "3.0.3",
  "description": "@sigma-force/react-sigma-cli is a framework for React that allows you to take this library to another level, integrate the best practices in the industry into your projects.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "react-sigma-cli": "./dist/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "nodemon --watch src --ext ts --exec ts-node --ignore '*.test.ts' --delay 1 src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "test": "npm i -g",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "format": "prettier --write '{*.ts,src/**/*.{ts}}'",
    "lint": "eslint src/**/**/** --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sigma-force/react-cli.git"
  },
  "author": "Sigma-Force Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sigma-force/react-cli/issues"
  },
  "homepage": "https://github.com/sigma-force/react-cli#readme",
  "dependencies": {
    "@inquirer/input": "0.0.9-alpha.0",
    "chalk": "^4.0.0",
    "clear": "^0.1.0",
    "commander": "^5.1.0",
    "figlet": "^1.4.0",
    "inquirer": "^7.1.0",
    "path": "^0.12.7",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^12.12.37",
    "@types/shelljs": "^0.8.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.3",
    "prettier": "^1.19.1",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  }
}
